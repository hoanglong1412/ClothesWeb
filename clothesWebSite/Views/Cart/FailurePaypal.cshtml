
@{
    ViewBag.Title = "FailurePaypal";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div id="all">
    <div id="content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <!-- breadcrumb-->
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="@Url.Action("viewCart")">Home</a></li>
                            <li aria-current="page" class="breadcrumb-item active">Payment failure with paypal</li>
                        </ol>
                    </nav>
                    <div id="error-page" class="row">
                        <div class="col-md-6 mx-auto">
                            <div class="box text-center py-5">
                                <p class="text-center"><img src="~/img/logo.png" alt="Obaju template"></p>
                                <h3>We are sorry - something went wrong with your payment</h3>
                                <h4 class="text-muted">Please check your account if it has enough monney</h4>
                                <p class="text-center">To continue please use the <strong>Search form</strong> or <strong>Menu</strong> above.</p>
                                <p class="buttons"><a href="@Url.Action("viewCart")" class="btn btn-primary"><i class="fa fa-home"></i> Go to Cart</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


