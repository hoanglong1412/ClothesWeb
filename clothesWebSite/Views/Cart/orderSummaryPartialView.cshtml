@if (ViewBag.AllCount != 0)
{
    <div id="order-summary" class="box">
        <div class="box-header">
            <h3 class="mb-0">Order summary</h3>
        </div>
        <p class="text-muted">Shipping and additional costs are calculated based on the values you have entered.</p>
        <div class="table-responsive">
            <table class="table">
                <tbody>
                    <tr>
                        <td>Order subtotal</td>
                        <th>$@ViewBag.AllTotal</th>
                    </tr>
                    <tr>
                        <td>Shipping and handling</td>
                        <th>$10</th>
                    </tr>
                    <tr>
                        <td>Tax</td>
                        <th>$0</th>
                    </tr>
                    <tr class="total">
                        <td>Total</td>
                        @{ double total = ViewBag.AllTotal + 10;}
                        <th>$@total</th>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div id="order-summary" class="box">
        <div class="box-header">
            <h3 class="mb-0">Order summary</h3>
        </div>
        <p class="text-muted">Shipping and additional costs are calculated based on the values you have entered.</p>
        <div class="table-responsive">
            <table class="table">
                <tbody>
                    <tr>
                        <td>Order subtotal</td>
                        <th>$0.00</th>
                    </tr>
                    <tr>
                        <td>Shipping and handling</td>
                        <th>$0.00</th>
                    </tr>
                    <tr>
                        <td>Tax</td>
                        <th>$0.00</th>
                    </tr>
                    <tr class="total">
                        <td>Total</td>
                        <th>$0.00</th>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
}
